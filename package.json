{
  "name": "file-server",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch .",
    "start": "bun db:push && ./server",
    "build": "bun build --compile --minify . --outfile server",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:push": "bunx --bun drizzle-kit push"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.6"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@libsql/client": "^0.15.4",
    "consola": "^3.4.2",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.8",
    "zod": "^4.0.0-beta.20250430T185432"
  }
}
